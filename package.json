{
  "name": "epoche",
  "version": "0.2.0",
  "description": "A modern, small wiki engine without complexity",
  "keywords": [
    "wiki",
    "engine",
    "markdown",
    "sqlite3",
    "cms"
  ],
  "homepage": "https://github.com/nolze/epoche",
  "repository": "https://github.com/nolze/epoche",
  "license": "MIT",
  "author": "nolze <nolze@archlinux.us>",
  "main": "epoche.js",
  "bin": {
    "epoche": "epoche.js"
  },
  "files": [
    "server/src/**/*.js",
    "view/public/",
    "epoche.js",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
